<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Página 1 - Bem-vindo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:layout_marginBottom="32dp"
                android:contentDescription="Ícone de criptomoedas" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_welcome_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_welcome_desc"
                android:textSize="16sp"
                android:textColor="#64748B"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Página 2 - Blockchain -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/blockchain"
                android:layout_marginBottom="32dp"
                android:contentDescription="Ícone de blockchain" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_blockchain_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:textAlignment="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_blockchain_desc"
                android:textSize="16sp"
                android:textColor="#64748B"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Página 3 - Criptomoedas Conhecidas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bitcoin"
                android:layout_margin="8dp"
                android:contentDescription="Bitcoin" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/eth"
                android:layout_margin="8dp"
                android:contentDescription="Ethereum" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/solana"
                android:layout_margin="8dp"
                android:contentDescription="Solana" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_crypto_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:textAlignment="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_crypto_desc_detailed"
                android:textSize="16sp"
                android:textColor="#64748B"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Página 4 - Segurança -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/secure"
                android:layout_marginBottom="32dp"
                android:contentDescription="Ícone de segurança" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_security_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:textAlignment="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_security_desc_detailed"
                android:textSize="16sp"
                android:textColor="#64748B"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </ViewFlipper>

    <!-- Indicadores de página (simples) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <View
            android:id="@+id/indicator1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="#3B82F6" />

        <View
            android:id="@+id/indicator2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="#D1D5DB" />

        <View
            android:id="@+id/indicator3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="#D1D5DB" />

        <View
            android:id="@+id/indicator4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="#D1D5DB" />

    </LinearLayout>

    <!-- Botões de navegação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/back"
            android:backgroundTint="#002BFF"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/next"
            android:backgroundTint="#002BFF"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
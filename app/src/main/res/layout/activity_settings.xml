<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tvLanguageTitle"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:elevation="4dp"
                android:layout_weight="1"
                android:text="Idiomas Disponíveis"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="24dp" />

    <Button
        android:id="@+id/btnPortuguese"
        android:text="Português"
        android:onClick="onIdiomaPortugues"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="#002BFF"/>

    <Button
        android:id="@+id/btnEnglish"
        android:text="English"
        android:onClick="onIdiomaIngles"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="#002BFF"
        android:layout_marginTop="16dp"/>
</LinearLayout>
